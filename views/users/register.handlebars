<div class="row">
    <div class="co-md-6 mx-auto">
        <div class="card card-body">
            <img src="/img/logo.png" alt="Logo" class="logo">
            <h3 class="text-center">
                Account Registration
            </h3>
            <form action="/users/register" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name" id="" class="form-control" required value="{{name}}">
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="" class="form-control" required value="{{email}}">
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="" class="form-control" required value="{{password}}">
                </div>

                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input type="password" name="password2" id="" class="form-control" required value="{{password2}}">
                </div>
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>